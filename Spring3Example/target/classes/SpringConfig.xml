<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="helloBean" class="com.mkyong.core.HelloWorld">
        <property name="name" value="Mkyong" />
    </bean>
    <bean id="helloDept" class="com.mkyong.core.Department">
        <property name="deptId" value="1" />
        <property name="deptName" value="PES" />
    </bean>
     <bean id="helloEmp" class="com.mkyong.core.Employee">
        <property name="empId" value="1" />
        <property name="empName" value="Sushmita" />
        <property name="deptId" value="1" />
    </bean>

</beans>